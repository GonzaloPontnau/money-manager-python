{
  "version": 2,
  "builds": [
    {
      "src": "money_manager/wsgi.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.9"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1",
      "headers": {
        "cache-control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/favicon.ico",
      "dest": "/static/favicon.ico"
    },
    {
      "src": "/(.*)",
      "dest": "money_manager/wsgi.py"
    }
  ],
  "env": {
    "DJANGO_SETTINGS_MODULE": "money_manager.settings",
    "USE_TURSO": "true",
    "DEBUG": "false"
  }
}
