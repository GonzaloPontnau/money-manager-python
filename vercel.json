{
  "version": 2,
  "builds": [
    {
      "src": "money_manager/wsgi.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "buildCommand": "sh build_files.sh",
        "includeFiles": [
            "staticfiles/**",
            "templates/**"
         ] 
      }
    }
  ],
  "routes": [
    { 
      "src": "/(.*)", 
      "dest": "money_manager/wsgi.py" 
    }
  ],
  "env": {
    "DJANGO_SETTINGS_MODULE": "money_manager.settings",
    "DEBUG": "false",
    "PYTHONUNBUFFERED": "1"
  }
}